{
  "build": {
    "env": {
      "PNPM_DISABLE_PREFLIGHT": "1",
      "PNPM_FLAGS": "--ignore-scripts"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/"
    }
  ]
}